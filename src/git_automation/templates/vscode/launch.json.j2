    "version": "0.2.0",
    "configurations": [
        {%- if language == "python" %}
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        }
        {%- elif language == "go" %}
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
        {%- endif %}
    ]
}