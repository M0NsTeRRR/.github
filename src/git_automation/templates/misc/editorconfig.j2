# https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true

{% if language == "python" -%}
# Python
[*.py]
indent_size = 4
{%- elif language == "go" %}
# Go
[{go.mod,*.go}]
indent_size = 1
indent_style = tab
{%- elif language == "rust" %}
# Rust
[*.rs]
indent_size = 4
{%- endif %}

# JSON
[*.json]
indent_size = 2
insert_final_newline = ignore

# YAML
[*.{yaml,yml}]
indent_size = 2
