{%- raw %}
test:
  name: Test
  runs-on: ubuntu-latest
  permissions:
    contents: read
    pull-requests: read
  strategy:
    matrix:
      go:
{%- for version in versions %}
        - "{{ version }}"
{%- endfor %}
  steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        persist-credentials: false
    - name: Install go
      uses: actions/setup-go@v5
      with:
        go-version: ${{ matrix.go }}
    - name: Run tests
      run: go test -v
{%- endraw %}