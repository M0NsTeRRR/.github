{%- raw %}
lint:
  name: Lint
  runs-on: ubuntu-latest
  strategy:
    matrix:
      go: [oldstable, stable]
  steps:
    - uses: actions/checkout@v4
    - name: Install go
      uses: actions/setup-go@v5
      with:
        go-version: ${{ matrix.go }}
    - name: Run golangci-lint
      uses: golangci/golangci-lint-action@v6
      with:
        version: latest
{%- endraw %}