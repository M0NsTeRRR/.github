{%- raw %}
lint:
  name: Lint
  runs-on: ubuntu-latest
  permissions:
    contents: read
    pull-requests: read
  steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        persist-credentials: false
    - name: Install go
      uses: actions/setup-go@v5
      with:
        go-version: stable
    - name: Run golangci-lint
      uses: golangci/golangci-lint-action@v6
      with:
        version: latest
{%- endraw %}